<div class="projects">
  <ul class="cf">
    <% @projects.each do |p| %>
      <li>
        <div class="shade"></div>
        <a data-toggle="lightbox" href="#lightbox_<%= p.id %>"><%= p.name %></a>
        <img src="<%= p.preview_image_url %>">
      </li>
    <% end %>
  </ul>
</div>

<% @projects.each do |p| %>
  <div id="lightbox_<%= p.id %>" class="lightbox hide fade"  tabindex="-1" role="dialog" aria-hidden="true">
    <div class='lightbox-header'>
      <button type="button" class="close" data-dismiss="lightbox" aria-hidden="true">&times;</button>
    </div>
    <div class='lightbox-content'>
      <img src="<%= p.full_image_url %>">
      <div class="lightbox-caption"><p><%= p.description %></p></div>
    </div>
  </div>
<% end %>

